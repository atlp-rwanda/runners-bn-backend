{
  "name": "runners-bn-backend",
  "version": "1.0.0",
  "description": "Barefoot nomad is an application that will enable its “Company Nomads” book their international travel and accommodation globally; easily and conveniently across all the locations/centers where the Company has its operations.",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha --timeout 20000 ./src/tests/**.test.js --require @babel/register --exit",
    "dev": "nodemon --exec babel-node ./src/index ",
    "coverage": "nyc npm test",
    "start": "babel-node ./src",
    "pretest": " NODE_ENV=test npm run db-drop &&  NODE_ENV=test npm run db-create && NODE_ENV=test npm run migrate && NODE_ENV=test npm run seed",
    "sequelize": "node_modules/.bin/sequelize",
    "migrate": "npm run sequelize db:migrate",
    "migrate-undo": "npm run sequelize db:migrate:undo",
    "migrate-undo-all": "npm run sequelize db:migrate:undo:all",
    "db-drop": "npm run sequelize db:drop nomad",
    "db-create": "npm run sequelize db:create nomad",
    "seed": "npm run sequelize db:seed:all",
    "seed-undo": "npm run sequelize db:seed:undo",
    "seed-undo-all": "npm run sequelize db:seed:undo:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlp-rwanda/runners-bn-backend.git"
  },
  "author": "Runners",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atlp-rwanda/runners-bn-backend/issues"
  },
  "homepage": "https://github.com/atlp-rwanda/runners-bn-backend#readme",
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.10",
    "@babel/register": "^7.12.10",
    "@sendgrid/mail": "^7.4.2",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "chai-passport-strategy": "^1.0.1",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "coverage": "^0.4.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nyc": "^15.1.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.4.0",
    "sequelize-cli": "^6.2.0",
    "sequelize-paginate": "^1.1.6",
    "sinon": "^9.2.3",
    "swagger-jsdoc": "^6.0.0-rc.5",
    "swagger-ui-express": "^4.1.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.2.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.6"
  }
